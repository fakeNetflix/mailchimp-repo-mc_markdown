source "https://rubygems.org"
ruby "2.0.0"

gemspec

group :heroku do

  # framework
  gem 'hobbit'
  gem 'rack-contrib' # this gets us try-static
  gem 'puma' # nice little server from evan phoenix
  gem 'foreman'

  # models
  gem 'sequel'
  gem 'pg'

  # util
  gem 'slugity'
  gem 'uuidtools'

  # templating
  gem "haml"
  gem "sass"
  gem "coffee-script"
  gem "redcarpet"

  # runtime
  gem "therubyracer"

end

group :testing do

  gem 'autotest'
  gem 'respec'

end